<!DOCTYPE html>
<html>
    <head>
        <title>Full Screen Examples</title>
        <%= csrf_meta_tags %>
        <%= csp_meta_tag %>
        <meta content="user-scalable=0, initial-scale=1.0, minimum-scale=1" name="viewport"/>
        <%= stylesheet_pack_tag 'main' %>
        <%= stylesheet_pack_tag 'samples/index' %>
    </head>
    <body>
      <%= render 'layouts/nav'%>
      <%= render 'layouts/mobile_hamburger'%>
      <%= pb_rails("layout/sidebar", props: { classname: "pb--page--sideNav non-kit"}) do %>
        <%= render 'layouts/sidebar'%>
      <% end %>
      <div class="sample-layout">
        <%= yield %>
      </div>
      <%= render 'layouts/footer'%>
    </body>

    <% if @type == 'react' %>
      <%= javascript_pack_tag 'application' %>
      <%= javascript_pack_tag 'popover_docs' %>
      <%= javascript_pack_tag 'samples' %>
      <%= javascript_pack_tag 'sample-show' %>
    <% else %>
      <%= javascript_pack_tag 'application' %>
      <%= javascript_pack_tag 'rails-examples' %>
      <%= javascript_pack_tag 'samples' %>
      <%= javascript_pack_tag 'sample-show' %>
      <%= yield :pb_js %>
    <% end %>
</html>
