<%= simple_form_for model, options do |form| %>
  <% instance_exec form, &children %>
<% end %>

<% if validate %>
  <% content_for :pb_js do %>
    <%= javascript_tag do %>
      window.addEventListener('DOMContentLoaded', function() {
        PbFormValidation.start()
      })
    <% end %>
  <% end %>
<% end %>