<%= content_tag(:div,
    id: object.id,
    data: object.data,
    class: object.classname,
    aria: object.aria) do %>

<%= pb_rails("flex", props: {classname: "flex-container", vertical: "stretch"}) do %>
    <%= pb_rails("body", props: {classname: "flex-item"}) do %>
      <%= pb_rails("date_stacked", props: { date: object.date, size: "sm", align: "right", bold: true }) %>
    <% end %>
    <%= pb_rails("section_separator", props: { orientation: "vertical", classname: "date-time-padding" }) %>
    <%= pb_rails("body", props: {classname: "flex-item"}) do %>
      <%= pb_rails("time_stacked", props: { date: object.date }) %>
    <% end %>
<% end %>

<% end %>